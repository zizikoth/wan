<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/dp15"
    android:layout_marginTop="@dimen/dp8"
    android:layout_marginEnd="@dimen/dp15"
    android:layout_marginBottom="@dimen/dp8"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="@dimen/dp5"
    app:cardElevation="0dp">
    
    <com.daimajia.swipe.SwipeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        
        <TextView
            android:id="@+id/mTvDelete"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/color_EB4310"
            android:foreground="?selectableItemBackground"
            android:gravity="center"
            android:paddingStart="@dimen/dp15"
            android:paddingEnd="@dimen/dp15"
            android:text="@string/DeleteFavorite"
            android:textColor="@color/white"
            android:textSize="@dimen/sp16"
            android:textStyle="bold"
            tools:ignore="UnusedAttribute" />
        
        <RelativeLayout
            android:id="@+id/mTvContent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?selectableItemBackground">
            
            <TextView
                android:id="@+id/mTvAutor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp15"
                android:layout_marginTop="@dimen/dp15"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp15"
                tools:text="BlankJ" />
            
            <com.memo.iframe.widget.textview.AlignTextView
                android:id="@+id/mTvTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/dp15"
                android:layout_marginTop="@dimen/dp40"
                android:layout_marginEnd="@dimen/dp15"
                android:ellipsize="end"
                android:maxLines="2"
                android:textColor="@color/color_333333"
                android:textSize="@dimen/sp16"
                android:textStyle="bold"
                tools:text="RecyclerView 性能优化 | 安卓 offer 收割基" />
            
            <com.memo.iframe.widget.textview.AlignTextView
                android:id="@+id/mTvDesc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/mTvTitle"
                android:layout_alignStart="@id/mTvTitle"
                android:layout_alignEnd="@id/mTvTitle"
                android:ellipsize="end"
                android:maxLines="3"
                android:paddingTop="@dimen/dp10"
                android:textColor="@color/color_666666"
                tools:text="感谢那些热爱开源、一起奋斗的朋友们。值得学习的话，Star哦^_^" />
            
            
            <TextView
                android:id="@+id/mTvChapter"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mTvDesc"
                android:layout_marginStart="@dimen/dp15"
                android:layout_marginTop="@dimen/dp10"
                android:textColor="@color/color_666666"
                android:textSize="@dimen/sp14"
                tools:text="RecyclerView" />
            
            
            <TextView
                android:id="@+id/mTvTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignTop="@id/mTvChapter"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/dp15"
                android:layout_marginBottom="@dimen/dp15"
                android:textColor="@color/color_666666"
                tools:text="3小时前" />
        </RelativeLayout>
    
    </com.daimajia.swipe.SwipeLayout>
</android.support.v7.widget.CardView>