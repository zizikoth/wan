<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:background="?selectableItemBackground"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <TextView
            android:id="@+id/mTvAuthor"
            android:layout_marginStart="@dimen/dp10"
            android:layout_marginTop="@dimen/dp5"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="作者"
            android:gravity="center"
            android:drawableStart="@drawable/ic_author"
            android:drawablePadding="@dimen/dp5"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/mTvTime"
            app:layout_constraintTop_toTopOf="@id/mTvAuthor"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginEnd="@dimen/dp10"
            tools:text="1分钟前"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

    <com.memo.iframe.widget.textview.AlignTextView
            android:id="@+id/mTvContent"
            app:layout_constraintLeft_toLeftOf="@id/mTvAuthor"
            app:layout_constraintRight_toRightOf="@id/mTvTime"
            app:layout_constraintTop_toBottomOf="@id/mTvAuthor"
            android:textColor="@color/black"
            android:layout_marginTop="@dimen/dp10"
            android:textSize="@dimen/sp16"
            tools:text="为什么我们能在主线程直接使用 Handler，而不需要创建 Looper ？"
            android:layout_width="0dp"
            android:layout_height="wrap_content"/>

    <TextView
            android:id="@+id/mTvTag"
            app:layout_constraintLeft_toLeftOf="@id/mTvAuthor"
            app:layout_constraintTop_toBottomOf="@id/mTvContent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="@dimen/dp10"
            android:drawableStart="@drawable/ic_tag"
            android:drawablePadding="@dimen/dp5"
            tools:text="公众号"
            android:gravity="center"
            android:layout_marginTop="@dimen/dp10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

</android.support.constraint.ConstraintLayout>