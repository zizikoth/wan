<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.memo.mine.ui.activity.setting.SettingActivity">
    
    <LinearLayout
        android:id="@+id/mLlCache"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp70"
        android:background="?selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp20"
        android:paddingTop="@dimen/dp10"
        android:paddingEnd="@dimen/dp20"
        android:paddingBottom="@dimen/dp10">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ClearCache"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp16"
            android:textStyle="bold" />
        
        <TextView
            android:id="@+id/mTvCache"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5"
            tools:text="1.2M" />
    
    </LinearLayout>
    
    <LinearLayout
        android:id="@+id/mLlIssues"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp70"
        android:background="?selectableItemBackground"
        android:gravity="center_vertical"
        android:orientation="vertical"
        android:paddingStart="@dimen/dp20"
        android:paddingTop="@dimen/dp10"
        android:paddingEnd="@dimen/dp20"
        android:paddingBottom="@dimen/dp10">
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/PublishIssues"
            android:textColor="@color/color_333333"
            android:textSize="@dimen/sp16"
            android:textStyle="bold" />
        
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp5"
            android:text="@string/UrlIssues" />
    
    
    </LinearLayout>
    
    
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/dp50">
        
        <android.support.v7.widget.CardView
            android:id="@+id/mCvLoginOut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/dp20"
            android:foreground="?selectableItemBackgroundBorderless"
            app:cardCornerRadius="@dimen/dp15">
            
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="@dimen/dp15"
                android:text="@string/LoginOut"
                android:textColor="@color/color_EB4310"
                android:textSize="@dimen/sp18"
                android:textStyle="bold" />
        </android.support.v7.widget.CardView>
    </FrameLayout>

</LinearLayout>
